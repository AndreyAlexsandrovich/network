  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "strict": true,
    "allowJs": true,    
    "checkJs": true,     
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
